{
  "manifest_version": 3,
  "name": "Crimson Market",
  "version": "1.0",
  "author": "WL",
  "description": "Diablo trade",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "d4 trade",
    "ddefault_icon": {
      "16": "",
      "32": ""
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["*.html", "*.css", "*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
